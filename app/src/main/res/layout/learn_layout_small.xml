<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    android:weightSum="14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#54922C">

        <ImageView
            android:id="@+id/back_srceen_study_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Động Vật"
            android:textColor="#FF0056CC"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.6"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/count_object_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="10/10"
            android:textColor="#fff100"
            android:textSize="23sp"
            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:background="#20ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_1_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#50ffffff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_2_img"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="#30ffffff" />
            </FrameLayout>


            <ImageView
                android:id="@+id/preview_3_img"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="6dp"
                android:scaleType="fitXY" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_4_img"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="#30ffffff" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/preview_5_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#50ffffff" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="30dp" />

            <Button
                android:id="@+id/play_music_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="30dp" />

            <Button
                android:id="@+id/next_btn"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="#54922C"></LinearLayout>

</LinearLayout>