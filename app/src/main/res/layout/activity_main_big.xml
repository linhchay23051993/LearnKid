<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4caf50"
    android:orientation="vertical"
    android:weightSum="14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#4caf50"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="11.4"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/animals_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_animals_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>

                <TextView
                    android:id="@+id/animals_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/main_image_1"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Con Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/object_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_object_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>


                <TextView
                    android:id="@+id/object_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Đồ Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/number_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_number_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>


                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Con Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alphabet_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_alphabet_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>


                <TextView
                    android:id="@+id/alphabet_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Đồ Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fruit_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_fruit_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>


                <TextView
                    android:id="@+id/fruit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Con Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/color_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_boder_image_main_learn"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/main_color_img"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/animals_conho" />
                </LinearLayout>


                <TextView
                    android:id="@+id/color_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4caf50"
                    android:gravity="center"
                    android:text="Đồ Vật"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <!--        GONNE    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/food_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/animals_conbo" />

                <TextView
                    android:id="@+id/food_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:text="Con Vật" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shape_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/animals_conbo" />

                <TextView
                    android:id="@+id/shape_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:text="Đồ Vật" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_language_img"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/rate_icon_img"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/rate_icon" />

        <ImageView
            android:id="@+id/feedback_icon_img"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/feedback_icon" />

    </LinearLayout>

</LinearLayout>