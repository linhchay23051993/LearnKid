<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    android:weightSum="14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back_srceen_study_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Động Vật"
            android:textColor="#4caf50"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.6"
        android:background="#4caf50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/count_object_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="10/10"
            android:textColor="#ffeb3b"
            android:textSize="23sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="58dp"
                android:layout_height="42dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_1_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/preview_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drawable_boder_preview_image" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="52dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_2_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/preview_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drawable_boder_preview_image" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="95dp"
                android:layout_height="68dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_3_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drawable_boder_preview_image_main" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="52dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/preview_4_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/preview_4_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drawable_boder_preview_image" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="58dp"
                android:layout_height="42dp">

                <ImageView
                    android:id="@+id/preview_5_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/preview_5_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drawable_boder_preview_image" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="30dp"
                android:background="@mipmap/next_btn_1" />

            <Button
                android:id="@+id/play_music_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="30dp"
                android:background="@mipmap/sound_btn" />

            <Button
                android:id="@+id/next_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/previous_btn_1" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="#ffffff"></LinearLayout>

</LinearLayout>